<div class="container mt-3">
  <h1>New Game</h1>
  <p>Here are your letters:</p>
  <div class="d-flex gap-1">
  <% @letters.each do |letter| %>
    <div class="d-flex tile align-items-center justify-content-center border border-2 border-dark rounded fw-bold"><%= letter.upcase %></div>
  <% end %>
  </div>
  <div class="mt-5">
    <form action="/score" method="post" data-turbo="false" class="col-4">
      <label for="word" class="form-label">What is the longest word you can find?</label>
      <div class="input-group mb-3">
      <input type="text" name="word" class="form-control">
      <input type="submit" value="Submit!" class="btn btn-primary">
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters.join  %>
    </form>
  </div>
</div>
